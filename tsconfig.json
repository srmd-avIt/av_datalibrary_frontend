{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx", // Or "preserve" if you're not using React

    /* Enable error reporting in JS files */
    "checkJs": true
  },
  "include": ["src"], // This tells TypeScript to only check files inside the 'src' folder
  "references": [{ "path": "./tsconfig.node.json" }]
}